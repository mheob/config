{
	"name": "@mheob/config",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"changeset": "changeset",
		"clean": "turbo run clean",
		"clean:root": "rm -rf .turbo && rm -rf node_modules",
		"cspell": "cspell .",
		"format": "prettier --write \"**/*.{cjs,js,mjs,ts,json,md,mdx,yaml,yml}\"",
		"lint": "turbo run lint",
		"prepare": "husky",
		"release": "changeset publish",
		"typegen": "turbo run typegen",
		"version-packages": "changeset version && pnpm lint"
	},
	"lint-staged": {
		"*": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@commitlint/cli": "^19.5.0",
		"@cspell/dict-de-de": "^4.0.3",
		"@mheob/changeset-changelog": "^3.0.1",
		"@mheob/commitlint-config": "workspace:*",
		"@mheob/eslint-config": "workspace:*",
		"@mheob/prettier-config": "workspace:*",
		"@types/node": "^20.16.11",
		"commitizen": "^4.3.1",
		"cspell": "^8.15.2",
		"cz-git": "^1.10.1",
		"eslint": "catalog:",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"ts-node": "^10.9.2",
		"turbo": "^2.1.3",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
