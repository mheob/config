{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".nvmrc", "pnpm-lock.yaml"],
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["gen", "^build"],
			"outputs": ["dist/**", ".turbo/**"]
		},
		"gen": {
			"dependsOn": ["typegen", "versiongen"],
			"outputs": ["src/typegen.d.ts", "src/cli/versions-map.generated.ts"]
		},
		"lint": {
			"cache": true
		},
		"typegen": {
			"cache": true,
			"outputs": ["src/typegen.d.ts"]
		},
		"versiongen": {
			"cache": true,
			"outputs": ["src/cli/versions-map.generated.ts"]
		}
	}
}
